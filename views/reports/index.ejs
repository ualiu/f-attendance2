<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar') %>

  <main class="main-with-sidebar">
    <h1>Absence Reports & Analytics</h1>
    <p class="subtitle">View and analyze absence trends over time</p>

    <!-- Filters -->
    <div class="card" style="margin-bottom: 2rem;">
      <h2>Filters</h2>
      <form method="GET" action="/reports" id="filterForm">
        <div class="form-row" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem; margin-bottom: 1rem;">
          <!-- Date Range Preset -->
          <div class="form-group">
            <label>Date Range</label>
            <select name="range" id="rangeSelect" onchange="toggleCustomDates()">
              <option value="today" <%= filters.range === 'today' ? 'selected' : '' %>>Today</option>
              <option value="week" <%= filters.range === 'week' ? 'selected' : '' %>>Last 7 Days</option>
              <option value="month" <%= filters.range === 'month' ? 'selected' : '' %>>This Month</option>
              <option value="quarter" <%= filters.range === 'quarter' ? 'selected' : '' %>>This Quarter</option>
              <option value="year" <%= filters.range === 'year' ? 'selected' : '' %>>This Year</option>
              <option value="custom" <%= filters.range === 'custom' ? 'selected' : '' %>>Custom Range</option>
            </select>
          </div>

          <!-- Custom Date Range -->
          <div class="form-group" id="customDates" style="<%= filters.range === 'custom' ? '' : 'display: none;' %>">
            <label>Start Date</label>
            <input type="date" name="startDate" value="<%= filters.startDate %>">
          </div>

          <div class="form-group" id="customDatesEnd" style="<%= filters.range === 'custom' ? '' : 'display: none;' %>">
            <label>End Date</label>
            <input type="date" name="endDate" value="<%= filters.endDate %>">
          </div>

          <!-- Employee Filter -->
          <div class="form-group">
            <label>Employee</label>
            <select name="employee">
              <option value="">All Employees</option>
              <% employees.forEach(emp => { %>
                <option value="<%= emp._id %>" <%= filters.employee === emp._id.toString() ? 'selected' : '' %>>
                  <%= emp.name %>
                </option>
              <% }); %>
            </select>
          </div>

          <!-- Type Filter -->
          <div class="form-group">
            <label>Type</label>
            <select name="type">
              <option value="">All Types</option>
              <optgroup label="SMS-Based (Automated)">
                <option value="sick" <%= filters.type === 'sick' ? 'selected' : '' %>>Sick</option>
                <option value="late" <%= filters.type === 'late' ? 'selected' : '' %>>Late</option>
                <option value="personal" <%= filters.type === 'personal' ? 'selected' : '' %>>Personal</option>
              </optgroup>
              <optgroup label="Manual Incidents">
                <option value="no_sms_no_show" <%= filters.type === 'no_sms_no_show' ? 'selected' : '' %>>No SMS, No Show</option>
                <option value="late_sms_no_show" <%= filters.type === 'late_sms_no_show' ? 'selected' : '' %>>Late SMS, No Show</option>
                <option value="left_early_no_permission" <%= filters.type === 'left_early_no_permission' ? 'selected' : '' %>>Left Early, No Permission</option>
                <option value="left_early_permission" <%= filters.type === 'left_early_permission' ? 'selected' : '' %>>Left Early with Permission</option>
                <option value="late_in_no_sms" <%= filters.type === 'late_in_no_sms' ? 'selected' : '' %>>Late In, No SMS</option>
              </optgroup>
            </select>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Apply Filters</button>
        <a href="/reports" class="btn btn-secondary">Reset</a>
      </form>
    </div>

    <!-- Statistics -->
    <div class="stats-grid" style="margin-bottom: 2rem;">
      <div class="stat-card">
        <div class="stat-value"><%= stats.total %></div>
        <div class="stat-label">Total Absences</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= stats.sick %></div>
        <div class="stat-label">Sick</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= stats.personal %></div>
        <div class="stat-label">Personal</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= stats.late %></div>
        <div class="stat-label">Late</div>
      </div>
    </div>

    <!-- Interactive Absence Timeline Chart -->
    <div class="card" style="margin-bottom: 2rem;">
      <h2>Employee Absence Overview</h2>
      <p style="color: #666; margin-bottom: 1rem;">
        Visual breakdown of absences by employee for the selected period
        <% if (employeeChartData.length > 15) { %>
          <span style="color: #17a2b8; font-weight: 500;"> â€¢ Scroll horizontally to see all <%= employeeChartData.length %> employees â†’</span>
        <% } %>
      </p>

      <% if (employeeChartData.length === 0) { %>
        <p style="text-align: center; color: #666; padding: 3rem;">No absences found for the selected period</p>
      <% } else { %>
        <!-- Scrollable container for many employees -->
        <div style="overflow-x: auto; overflow-y: hidden; margin-bottom: 1rem;">
          <div style="position: relative; height: 500px; width: <%= Math.max(400, employeeChartData.length * 50) %>px; max-width: 100%;">
            <canvas id="absenceChart"></canvas>
          </div>
        </div>

        <!-- Chart Legend -->
        <div style="display: flex; justify-content: center; gap: 2rem; flex-wrap: wrap; margin-top: 1rem; padding: 1rem; background: #f8f9fa; border-radius: 6px;">
          <div style="display: flex; align-items: center; gap: 0.5rem;">
            <div style="width: 20px; height: 20px; background: #dc3545; border-radius: 4px;"></div>
            <span>Absences</span>
          </div>
          <div style="display: flex; align-items: center; gap: 0.5rem;">
            <div style="width: 20px; height: 20px; background: #ffc107; border-radius: 4px;"></div>
            <span>Lates</span>
          </div>
        </div>
      <% } %>
    </div>

  </main>

  <script src="/js/global.js"></script>
  <script>
    function toggleCustomDates() {
      const range = document.getElementById('rangeSelect').value;
      const customDates = document.getElementById('customDates');
      const customDatesEnd = document.getElementById('customDatesEnd');

      if (range === 'custom') {
        customDates.style.display = 'block';
        customDatesEnd.style.display = 'block';
      } else {
        customDates.style.display = 'none';
        customDatesEnd.style.display = 'none';
      }
    }

    // Format absence type badges on page load
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.type-badge').forEach(badge => {
        const rawType = badge.textContent.trim();
        badge.textContent = formatAbsenceType(rawType);
      });

      // Initialize the absence chart
      initAbsenceChart();
    });

    function initAbsenceChart() {
      const canvas = document.getElementById('absenceChart');
      if (!canvas) return; // No chart to render

      // Data from server
      const chartData = <%- JSON.stringify(employeeChartData) %>;

      if (chartData.length === 0) return;

      // Debug: Log the data
      console.log('ðŸ“Š Chart Data:', chartData);

      // Prepare data for stacked vertical bar chart
      const labels = chartData.map(emp => emp.name);
      const absencesData = chartData.map(emp => emp.absences);
      const latesData = chartData.map(emp => emp.lates);

      console.log('ðŸ“Š Labels:', labels);
      console.log('ðŸ“Š Absences:', absencesData);
      console.log('ðŸ“Š Lates:', latesData);

      const ctx = canvas.getContext('2d');

      new Chart(ctx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [
            {
              label: 'Absences',
              data: absencesData,
              backgroundColor: '#dc3545', // Red for absences
              borderWidth: 0
            },
            {
              label: 'Lates',
              data: latesData,
              backgroundColor: '#ffc107', // Yellow for lates
              borderWidth: 0
            }
          ]
        },
        options: {
          indexAxis: 'x', // Vertical bars (names at bottom)
          responsive: true,
          maintainAspectRatio: false,
          maxBarThickness: 35, // Consistent bar width
          barPercentage: 0.9, // Clean, consistent bars
          categoryPercentage: 0.95, // Small consistent gap
          plugins: {
            legend: {
              display: false // We have custom legend
            },
            tooltip: {
              callbacks: {
                title: function(context) {
                  // Show employee name
                  return context[0].label;
                },
                label: function(context) {
                  const label = context.dataset.label || '';
                  const value = context.parsed.y;

                  // Only show this type if it has a value > 0
                  if (value > 0) {
                    return `${label}: ${value} day${value !== 1 ? 's' : ''}`;
                  }
                  return null;
                },
                footer: function(tooltipItems) {
                  // Calculate total from all segments
                  let total = 0;
                  const employeeIndex = tooltipItems[0].dataIndex;
                  const chartData = <%- JSON.stringify(employeeChartData) %>;

                  if (chartData[employeeIndex]) {
                    total = chartData[employeeIndex].total;
                  }

                  return `â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€\nTotal: ${total} day${total !== 1 ? 's' : ''}`;
                }
              },
              filter: function(tooltipItem) {
                // Only show tooltip items with values > 0
                return tooltipItem.parsed.y > 0;
              },
              backgroundColor: 'rgba(0, 0, 0, 0.8)',
              padding: 12,
              titleFont: {
                size: 14,
                weight: 'bold'
              },
              bodyFont: {
                size: 13
              },
              footerFont: {
                size: 13,
                weight: 'bold'
              }
            }
          },
          scales: {
            x: {
              stacked: true,
              offset: true, // Add padding so bars don't touch axis
              ticks: {
                font: {
                  size: 11,
                  family: 'system-ui, -apple-system, sans-serif'
                },
                maxRotation: 45,
                minRotation: 45,
                color: '#333'
              },
              grid: {
                display: false,
                drawBorder: true,
                borderColor: '#ddd'
              }
            },
            y: {
              stacked: true,
              beginAtZero: true,
              ticks: {
                stepSize: 1,
                font: {
                  size: 11,
                  family: 'system-ui, -apple-system, sans-serif'
                },
                color: '#666',
                precision: 0
              },
              title: {
                display: true,
                text: 'Days',
                font: {
                  size: 12,
                  weight: '600',
                  family: 'system-ui, -apple-system, sans-serif'
                },
                color: '#333'
              },
              grid: {
                color: 'rgba(0, 0, 0, 0.06)',
                drawBorder: true,
                borderColor: '#ddd'
              }
            }
          },
          interaction: {
            mode: 'index',
            intersect: false
          }
        }
      });
    }
  </script>
</body>
</html>
