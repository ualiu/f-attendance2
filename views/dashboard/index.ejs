<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Felton Brushes</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar') %>

  <main class="main-with-sidebar">
    <div class="dashboard-header">
      <h1><%= title %></h1>
      <div class="date-info">
        <%= new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
      </div>
    </div>

    <!-- Today's Summary -->
    <div class="stats-grid">
      <div class="stat-card">
        <h3>Total Employees</h3>
        <div class="stat-value"><%= todaysSummary.totalEmployees %></div>
      </div>

      <div class="stat-card stat-success">
        <h3>Present Today</h3>
        <div class="stat-value"><%= todaysSummary.presentCount %></div>
      </div>

      <div class="stat-card stat-warning">
        <h3>Absent Today</h3>
        <div class="stat-value"><%= todaysSummary.absentCount %></div>
      </div>

      <div class="stat-card stat-info">
        <h3>Late Today</h3>
        <div class="stat-value"><%= todaysSummary.lateCount %></div>
      </div>
    </div>

    <!-- Alerts Section -->
    <% if (alertEmployees.length > 0) { %>
      <div class="alert-section">
        <h2>Employees At Risk (<%= alertEmployees.length %>)</h2>
        <div class="alert-list">
          <% alertEmployees.forEach(emp => { %>
            <div class="alert-item alert-<%= emp.status %>">
              <div class="alert-info">
                <a href="/dashboard/employee/<%= emp._id %>" class="employee-name">
                  <%= emp.name %>
                </a>
                <span class="employee-station"><%= emp.department %> - <%= emp.shift %></span>
              </div>
              <div class="alert-points">
                <span class="points"><%= emp.points_current_quarter %> / 6.0 pts</span>
                <span class="status-badge status-<%= emp.status %>"><%= emp.status.replace('_', ' ') %></span>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>

    <!-- Recent Reports -->
    <div class="recent-absences-section">
      <h2>Recent Absence Reports</h2>
      <div class="table-responsive">
        <table class="absences-table">
        <thead>
          <tr>
            <th>Time</th>
            <th>Employee</th>
            <th>Type</th>
            <th>Reason</th>
            <th>Points</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (recentAbsences.length === 0) { %>
            <tr>
              <td colspan="6" class="no-data">No recent reports</td>
            </tr>
          <% } else { %>
            <% recentAbsences.forEach(absence => { %>
              <tr>
                <td><%= absence.report_time ? new Date(absence.report_time).toLocaleString() : 'N/A' %></td>
                <td>
                  <a href="/dashboard/employee/<%= absence.employee_id?._id %>">
                    <%= absence.employee_name %>
                  </a>
                </td>
                <td><span class="type-badge type-<%= absence.type %>"><%= absence.type %></span></td>
                <td><%= absence.reason %></td>
                <td><%= absence.points_awarded %></td>
                <td>
                  <% if (absence.report_message) { %>
                    <button onclick="viewMessage('<%= absence._id %>')" class="btn-small">View</button>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
      </div>
    </div>
  </main>

  <script src="/js/dashboard.js"></script>
  <script>
    // Toggle sidebar for mobile
    function toggleSidebar() {
      const sidebar = document.querySelector('.sidebar');
      const overlay = document.querySelector('.sidebar-overlay');
      sidebar.classList.toggle('active');
      overlay.classList.toggle('active');
    }

    // Close sidebar when clicking on a link (mobile only)
    document.querySelectorAll('.sidebar-link').forEach(link => {
      link.addEventListener('click', () => {
        if (window.innerWidth < 768) {
          toggleSidebar();
        }
      });
    });
  </script>
</body>
</html>
