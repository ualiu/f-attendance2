<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invite Admin - Felton Brushes</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar') %>

  <main class="main-with-sidebar">
    <h1>Admin Management</h1>
    <p class="subtitle">Manage admin accounts and system settings</p>

    <!-- Current Admins -->
    <div class="card" style="margin-bottom: 1.5rem;">
      <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
        <h2 style="margin: 0;">Current Admins</h2>
        <button onclick="showAddAdminModal()" class="btn btn-primary">+ Add Admin</button>
      </div>
      <div class="table-responsive">
        <table class="data-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (!admins || admins.length === 0) { %>
            <tr>
              <td colspan="5" class="no-data">No admins found</td>
            </tr>
          <% } else { %>
            <% admins.forEach(admin => { %>
              <tr>
                <td><%= admin.name %></td>
                <td><%= admin.email %></td>
                <td>
                  <% if (admin.role === 'super_admin') { %>
                    <span class="user-role-badge super-admin">Super Admin</span>
                  <% } else if (admin.role === 'admin') { %>
                    <span class="user-role-badge admin">Admin</span>
                  <% } else { %>
                    <%= admin.role %>
                  <% } %>
                </td>
                <td>
                  <% if (admin.is_active) { %>
                    <span style="color: #10b981; font-weight: 500;">Active</span>
                  <% } else { %>
                    <span style="color: #ef4444; font-weight: 500;">Inactive</span>
                  <% } %>
                </td>
                <td>
                  <% if (admin._id.toString() !== user._id.toString()) { %>
                    <button onclick="deleteAdmin('<%= admin._id %>')" class="btn-small" style="background: #ef4444;">Delete</button>
                  <% } else { %>
                    <span style="color: #999;">-</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
      </div>
    </div>

    <!-- SMS System Status -->
    <div class="card" style="margin-bottom: 1.5rem;">
      <div style="display: flex; align-items: center; gap: 1rem;">
        <div style="width: 12px; height: 12px; background: #10b981; border-radius: 50%; box-shadow: 0 0 8px rgba(16, 185, 129, 0.5);"></div>
        <div>
          <h2 style="margin: 0; font-size: 1.125rem;">SMS System Online</h2>
          <p style="margin: 0.25rem 0 0 0; color: #6b7280; font-size: 0.875rem;">Automated SMS parsing is active</p>
        </div>
      </div>
    </div>

    <!-- Timezone Settings Section -->
    <div class="card" style="margin-bottom: 1.5rem;">
      <h2 style="font-size: 1.125rem;">Organization Timezone</h2>
      <p style="color: #6b7280; margin-bottom: 1rem; font-size: 0.875rem;">Set the timezone for your organization. All times and dates will be displayed in this timezone.</p>

      <div class="form-group">
        <label for="timezoneSelect" style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Timezone</label>
        <select id="timezoneSelect" class="timezone-select" onchange="updateTimezone(this.value)">
          <optgroup label="US Timezones">
            <option value="America/New_York" <%= organization?.settings?.timezone === 'America/New_York' ? 'selected' : '' %>>Eastern Time (ET)</option>
            <option value="America/Chicago" <%= organization?.settings?.timezone === 'America/Chicago' ? 'selected' : '' %>>Central Time (CT)</option>
            <option value="America/Denver" <%= organization?.settings?.timezone === 'America/Denver' ? 'selected' : '' %>>Mountain Time (MT)</option>
            <option value="America/Phoenix" <%= organization?.settings?.timezone === 'America/Phoenix' ? 'selected' : '' %>>Arizona Time (MST - No DST)</option>
            <option value="America/Los_Angeles" <%= organization?.settings?.timezone === 'America/Los_Angeles' ? 'selected' : '' %>>Pacific Time (PT)</option>
            <option value="America/Anchorage" <%= organization?.settings?.timezone === 'America/Anchorage' ? 'selected' : '' %>>Alaska Time (AKT)</option>
            <option value="Pacific/Honolulu" <%= organization?.settings?.timezone === 'Pacific/Honolulu' ? 'selected' : '' %>>Hawaii Time (HST)</option>
          </optgroup>
          <optgroup label="Canada Timezones">
            <option value="America/Halifax" <%= organization?.settings?.timezone === 'America/Halifax' ? 'selected' : '' %>>Atlantic Time (AT)</option>
            <option value="America/Toronto" <%= organization?.settings?.timezone === 'America/Toronto' ? 'selected' : '' %>>Eastern Time - Toronto</option>
            <option value="America/Winnipeg" <%= organization?.settings?.timezone === 'America/Winnipeg' ? 'selected' : '' %>>Central Time - Winnipeg</option>
            <option value="America/Edmonton" <%= organization?.settings?.timezone === 'America/Edmonton' ? 'selected' : '' %>>Mountain Time - Edmonton</option>
            <option value="America/Vancouver" <%= organization?.settings?.timezone === 'America/Vancouver' ? 'selected' : '' %>>Pacific Time - Vancouver</option>
          </optgroup>
        </select>
        <small style="color: #6b7280; display: block; margin-top: 0.5rem;">Current time in selected timezone: <strong id="currentTimezoneTime">Loading...</strong></small>
      </div>

      <div id="timezoneStatusMessage" style="margin-top: 1rem; padding: 0.75rem; border-radius: 6px; display: none;"></div>
    </div>

    <!-- Shift Times Section -->
    <div class="card" style="margin-bottom: 1.5rem;">
      <h2 style="font-size: 1.125rem;">Shift Times Configuration</h2>
      <p style="color: #6b7280; margin-bottom: 1rem; font-size: 0.875rem;">Configure start and end times for each shift. Used to calculate manpower hours lost.</p>

      <!-- Day Shift -->
      <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; margin-bottom: 1.5rem;">
        <h3 style="margin: 0 0 1rem 0; font-size: 1.125rem; color: #111827;">Day Shift</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
          <div class="form-group">
            <label for="dayShiftStart" style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Start Time</label>
            <input type="time" id="dayShiftStart" class="timezone-select" value="<%= organization?.settings?.shift_times?.day_start || '07:00' %>" onchange="updateShiftTimes()">
            <small style="color: #6b7280; display: block; margin-top: 0.5rem;">Default: 7:00 AM</small>
          </div>
          <div class="form-group">
            <label for="dayShiftEnd" style="display: block; margin-bottom: 0.5rem; font-weight: 600;">End Time</label>
            <input type="time" id="dayShiftEnd" class="timezone-select" value="<%= organization?.settings?.shift_times?.day_end || '15:00' %>" onchange="updateShiftTimes()">
            <small style="color: #6b7280; display: block; margin-top: 0.5rem;">Default: 3:00 PM</small>
          </div>
        </div>
      </div>

      <!-- Night Shift -->
      <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; margin-bottom: 1.5rem;">
        <h3 style="margin: 0 0 1rem 0; font-size: 1.125rem; color: #111827;">Night Shift</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
          <div class="form-group">
            <label for="nightShiftStart" style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Start Time</label>
            <input type="time" id="nightShiftStart" class="timezone-select" value="<%= organization?.settings?.shift_times?.night_start || '19:00' %>" onchange="updateShiftTimes()">
            <small style="color: #6b7280; display: block; margin-top: 0.5rem;">Default: 7:00 PM</small>
          </div>
          <div class="form-group">
            <label for="nightShiftEnd" style="display: block; margin-bottom: 0.5rem; font-weight: 600;">End Time</label>
            <input type="time" id="nightShiftEnd" class="timezone-select" value="<%= organization?.settings?.shift_times?.night_end || '03:00' %>" onchange="updateShiftTimes()">
            <small style="color: #6b7280; display: block; margin-top: 0.5rem;">Default: 3:00 AM (next day)</small>
          </div>
        </div>
      </div>

      <!-- Weekend Shift -->
      <div style="background: #f8f9fa; padding: 1.5rem; border-radius: 8px; margin-bottom: 1rem;">
        <h3 style="margin: 0 0 1rem 0; font-size: 1.125rem; color: #111827;">Weekend Shift</h3>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 1rem;">
          <div class="form-group">
            <label for="weekendShiftStart" style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Start Time</label>
            <input type="time" id="weekendShiftStart" class="timezone-select" value="<%= organization?.settings?.shift_times?.weekend_start || '08:00' %>" onchange="updateShiftTimes()">
            <small style="color: #6b7280; display: block; margin-top: 0.5rem;">Default: 8:00 AM</small>
          </div>
          <div class="form-group">
            <label for="weekendShiftEnd" style="display: block; margin-bottom: 0.5rem; font-weight: 600;">End Time</label>
            <input type="time" id="weekendShiftEnd" class="timezone-select" value="<%= organization?.settings?.shift_times?.weekend_end || '16:00' %>" onchange="updateShiftTimes()">
            <small style="color: #6b7280; display: block; margin-top: 0.5rem;">Default: 4:00 PM</small>
          </div>
        </div>
      </div>

      <div id="shiftTimesStatusMessage" style="margin-top: 1rem; padding: 0.75rem; border-radius: 6px; display: none;"></div>
    </div>
  </main>

  <!-- Add Admin Modal -->
  <div id="addAdminModal" class="modal" style="display: none;">
    <div class="modal-content">
      <h2>Create Admin Account</h2>
      <form id="inviteForm" onsubmit="addAdmin(event)">
        <div class="form-group">
          <label>Full Name</label>
          <input type="text" name="name" required>
        </div>

        <div class="form-group">
          <label>Email Address</label>
          <input type="email" name="email" required>
          <small style="color: #666; display: block; margin-top: 0.25rem;">
            This will be used for login
          </small>
        </div>

        <div class="form-group">
          <label>Password</label>
          <input type="password" name="password" required minlength="6">
          <small style="color: #666; display: block; margin-top: 0.25rem;">
            Minimum 6 characters. Share this with the admin securely.
          </small>
        </div>

        <div class="modal-actions">
          <button type="submit" class="btn btn-primary">Create Admin</button>
          <button type="button" onclick="closeModal('addAdminModal')" class="btn btn-secondary">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <style>
    /* Timezone Select Styles */
    .timezone-select {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #d1d5db;
      border-radius: 6px;
      font-size: 1rem;
      background: white;
      cursor: pointer;
      transition: border-color 0.2s;
    }

    .timezone-select:hover {
      border-color: #4f46e5;
    }

    .timezone-select:focus {
      outline: none;
      border-color: #4f46e5;
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }
  </style>

  <script>
    // Update Timezone
    async function updateTimezone(timezone) {
      const statusMessage = document.getElementById('timezoneStatusMessage');

      try {
        const response = await fetch('/api/organization/settings/timezone', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ timezone })
        });

        if (response.ok) {
          // Show success message
          statusMessage.style.display = 'block';
          statusMessage.style.background = '#d1fae5';
          statusMessage.style.color = '#065f46';
          statusMessage.style.border = '1px solid #10b981';
          statusMessage.textContent = `✅ Timezone updated to ${timezone}`;

          // Update current time display
          updateTimezoneDisplay(timezone);

          setTimeout(() => {
            statusMessage.style.display = 'none';
          }, 3000);
        } else {
          throw new Error('Failed to update timezone');
        }
      } catch (error) {
        console.error('Error:', error);
        statusMessage.style.display = 'block';
        statusMessage.style.background = '#fee2e2';
        statusMessage.style.color = '#991b1b';
        statusMessage.style.border = '1px solid #ef4444';
        statusMessage.textContent = '❌ Error updating timezone. Please try again.';

        setTimeout(() => {
          statusMessage.style.display = 'none';
        }, 3000);
      }
    }

    // Update timezone display
    function updateTimezoneDisplay(timezone) {
      const currentTimeElement = document.getElementById('currentTimezoneTime');
      const now = new Date();

      const options = {
        timeZone: timezone,
        hour: 'numeric',
        minute: '2-digit',
        second: '2-digit',
        hour12: true,
        weekday: 'short',
        month: 'short',
        day: 'numeric',
        year: 'numeric'
      };

      const formatter = new Intl.DateTimeFormat('en-US', options);
      currentTimeElement.textContent = formatter.format(now);
    }

    // Update Shift Times
    async function updateShiftTimes() {
      const statusMessage = document.getElementById('shiftTimesStatusMessage');
      const dayStart = document.getElementById('dayShiftStart').value;
      const dayEnd = document.getElementById('dayShiftEnd').value;
      const nightStart = document.getElementById('nightShiftStart').value;
      const nightEnd = document.getElementById('nightShiftEnd').value;
      const weekendStart = document.getElementById('weekendShiftStart').value;
      const weekendEnd = document.getElementById('weekendShiftEnd').value;

      try {
        const response = await fetch('/api/organization/settings/shift-times', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            day_start: dayStart,
            day_end: dayEnd,
            night_start: nightStart,
            night_end: nightEnd,
            weekend_start: weekendStart,
            weekend_end: weekendEnd
          })
        });

        if (response.ok) {
          // Show success message
          statusMessage.style.display = 'block';
          statusMessage.style.background = '#d1fae5';
          statusMessage.style.color = '#065f46';
          statusMessage.style.border = '1px solid #10b981';
          statusMessage.textContent = '✅ Shift times updated successfully';

          setTimeout(() => {
            statusMessage.style.display = 'none';
          }, 3000);
        } else {
          throw new Error('Failed to update shift times');
        }
      } catch (error) {
        console.error('Error:', error);
        statusMessage.style.display = 'block';
        statusMessage.style.background = '#fee2e2';
        statusMessage.style.color = '#991b1b';
        statusMessage.style.border = '1px solid #ef4444';
        statusMessage.textContent = '❌ Error updating shift times. Please try again.';

        setTimeout(() => {
          statusMessage.style.display = 'none';
        }, 3000);
      }
    }

    // Initialize timezone display on page load
    document.addEventListener('DOMContentLoaded', function() {
      const timezoneSelect = document.getElementById('timezoneSelect');
      if (timezoneSelect) {
        updateTimezoneDisplay(timezoneSelect.value);

        // Update time every second
        setInterval(() => {
          updateTimezoneDisplay(timezoneSelect.value);
        }, 1000);
      }
    });

    function showAddAdminModal() {
      document.getElementById('addAdminModal').style.display = 'flex';
    }

    function closeModal(modalId) {
      document.getElementById(modalId).style.display = 'none';
    }

    async function addAdmin(e) {
      e.preventDefault();

      const formData = new FormData(e.target);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        password: formData.get('password')
      };

      try {
        const response = await fetch('/admin/invite-admin', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (response.ok) {
          alert(`✅ Admin account created successfully!\n\nEmail: ${result.admin.email}\n\nShare the login credentials with the admin securely.`);
          closeModal('addAdminModal');
          location.reload(); // Refresh to show new admin in list
        } else {
          alert('Error: ' + (result.error || 'Failed to create admin'));
        }
      } catch (error) {
        alert('Error creating admin: ' + error.message);
      }
    }

    async function removeAdmin(adminId) {
      if (!confirm('Are you sure you want to remove this admin? They will no longer have access to the system.')) {
        return;
      }

      try {
        const response = await fetch(`/admin/remove-admin/${adminId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const result = await response.json();

        if (response.ok) {
          alert('Admin removed successfully');
          location.reload();
        } else {
          alert('Error: ' + (result.error || 'Failed to remove admin'));
        }
      } catch (error) {
        alert('Error removing admin: ' + error.message);
      }
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
      if (event.target.classList.contains('modal')) {
        event.target.style.display = 'none';
      }
    }
  </script>
  <script src="/js/global.js"></script>
</body>
</html>
