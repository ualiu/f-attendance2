<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invite Admin - Felton Brushes</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/sidebar') %>

  <main class="main-with-sidebar">
    <h1>Admin Management</h1>
    <p class="subtitle">Manage admin accounts for your organization</p>

    <!-- Organization Settings Section -->
    <div class="card" style="margin-bottom: 2rem;">
      <h2>SMS Parsing AI Model</h2>
      <p style="color: #6b7280; margin-bottom: 1.5rem;">Choose which AI model to use for parsing employee SMS messages</p>

      <div class="llm-provider-selection">
        <label class="radio-card <%= organization?.settings?.llm_provider === 'claude' || !organization?.settings?.llm_provider ? 'active' : '' %>" onclick="updateLLMProvider('claude')">
          <input type="radio" name="llm_provider" value="claude" <%= organization?.settings?.llm_provider === 'claude' || !organization?.settings?.llm_provider ? 'checked' : '' %>>
          <div class="radio-card-content">
            <div class="radio-card-header">
              <span class="radio-card-icon">ðŸ¤–</span>
              <h3>Claude Opus 4.5</h3>
            </div>
            <p>Anthropic's most intelligent model. Excellent at understanding context and nuanced language.</p>
          </div>
        </label>

        <label class="radio-card <%= organization?.settings?.llm_provider === 'openai' ? 'active' : '' %>" onclick="updateLLMProvider('openai')">
          <input type="radio" name="llm_provider" value="openai" <%= organization?.settings?.llm_provider === 'openai' ? 'checked' : '' %>>
          <div class="radio-card-content">
            <div class="radio-card-header">
              <span class="radio-card-icon">âš¡</span>
              <h3>GPT-5 Mini</h3>
            </div>
            <p>OpenAI's latest and most advanced mini model. Exceptional performance for structured parsing tasks.</p>
          </div>
        </label>
      </div>

      <div id="llmStatusMessage" style="margin-top: 1rem; padding: 0.75rem; border-radius: 6px; display: none;"></div>
    </div>

    <!-- Timezone Settings Section -->
    <div class="card" style="margin-bottom: 2rem;">
      <h2>Organization Timezone</h2>
      <p style="color: #6b7280; margin-bottom: 1.5rem;">Set the timezone for your organization. All times and dates will be displayed in this timezone.</p>

      <div class="form-group">
        <label for="timezoneSelect" style="display: block; margin-bottom: 0.5rem; font-weight: 600;">Timezone</label>
        <select id="timezoneSelect" class="timezone-select" onchange="updateTimezone(this.value)">
          <optgroup label="US Timezones">
            <option value="America/New_York" <%= organization?.settings?.timezone === 'America/New_York' ? 'selected' : '' %>>Eastern Time (ET)</option>
            <option value="America/Chicago" <%= organization?.settings?.timezone === 'America/Chicago' ? 'selected' : '' %>>Central Time (CT)</option>
            <option value="America/Denver" <%= organization?.settings?.timezone === 'America/Denver' ? 'selected' : '' %>>Mountain Time (MT)</option>
            <option value="America/Phoenix" <%= organization?.settings?.timezone === 'America/Phoenix' ? 'selected' : '' %>>Arizona Time (MST - No DST)</option>
            <option value="America/Los_Angeles" <%= organization?.settings?.timezone === 'America/Los_Angeles' ? 'selected' : '' %>>Pacific Time (PT)</option>
            <option value="America/Anchorage" <%= organization?.settings?.timezone === 'America/Anchorage' ? 'selected' : '' %>>Alaska Time (AKT)</option>
            <option value="Pacific/Honolulu" <%= organization?.settings?.timezone === 'Pacific/Honolulu' ? 'selected' : '' %>>Hawaii Time (HST)</option>
          </optgroup>
          <optgroup label="Canada Timezones">
            <option value="America/Halifax" <%= organization?.settings?.timezone === 'America/Halifax' ? 'selected' : '' %>>Atlantic Time (AT)</option>
            <option value="America/Toronto" <%= organization?.settings?.timezone === 'America/Toronto' ? 'selected' : '' %>>Eastern Time - Toronto</option>
            <option value="America/Winnipeg" <%= organization?.settings?.timezone === 'America/Winnipeg' ? 'selected' : '' %>>Central Time - Winnipeg</option>
            <option value="America/Edmonton" <%= organization?.settings?.timezone === 'America/Edmonton' ? 'selected' : '' %>>Mountain Time - Edmonton</option>
            <option value="America/Vancouver" <%= organization?.settings?.timezone === 'America/Vancouver' ? 'selected' : '' %>>Pacific Time - Vancouver</option>
          </optgroup>
        </select>
        <small style="color: #6b7280; display: block; margin-top: 0.5rem;">Current time in selected timezone: <strong id="currentTimezoneTime">Loading...</strong></small>
      </div>

      <div id="timezoneStatusMessage" style="margin-top: 1rem; padding: 0.75rem; border-radius: 6px; display: none;"></div>
    </div>

    <!-- Add Admin Button -->
    <div style="margin-bottom: 2rem;">
      <button onclick="showAddAdminModal()" class="btn btn-primary">+ Add Admin</button>
    </div>

    <!-- Admins List -->
    <div class="card">
      <h2>Current Admins</h2>
      <div class="table-responsive">
        <table class="data-table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (admins.length === 0) { %>
            <tr>
              <td colspan="6" class="no-data">No admins found</td>
            </tr>
          <% } else { %>
            <% admins.forEach(admin => { %>
              <tr>
                <td><%= admin.name %></td>
                <td><%= admin.email %></td>
                <td>
                  <span class="status-badge <%= admin.role === 'super_admin' ? 'status-good' : 'status-watch' %>">
                    <%= admin.role === 'super_admin' ? 'Super Admin' : 'Admin' %>
                  </span>
                </td>
                <td>
                  <span class="status-badge <%= admin.is_active ? 'status-good' : 'status-review_required' %>">
                    <%= admin.is_active ? 'Active' : 'Disabled' %>
                  </span>
                </td>
                <td>
                  <% if (admin.created_at) { %>
                    <%= new Date(admin.created_at).toLocaleDateString() %>
                  <% } else { %>
                    N/A
                  <% } %>
                </td>
                <td>
                  <% if (admin.role !== 'super_admin') { %>
                    <button onclick="removeAdmin('<%= admin._id %>')" class="btn-small btn-danger">
                      Remove
                    </button>
                  <% } else { %>
                    <span style="color: #999;">-</span>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
      </div>
    </div>
  </main>

  <!-- Add Admin Modal -->
  <div id="addAdminModal" class="modal" style="display: none;">
    <div class="modal-content">
      <h2>Create Admin Account</h2>
      <form id="inviteForm" onsubmit="addAdmin(event)">
        <div class="form-group">
          <label>Full Name</label>
          <input type="text" name="name" required>
        </div>

        <div class="form-group">
          <label>Email Address</label>
          <input type="email" name="email" required>
          <small style="color: #666; display: block; margin-top: 0.25rem;">
            This will be used for login
          </small>
        </div>

        <div class="form-group">
          <label>Password</label>
          <input type="password" name="password" required minlength="6">
          <small style="color: #666; display: block; margin-top: 0.25rem;">
            Minimum 6 characters. Share this with the admin securely.
          </small>
        </div>

        <div class="modal-actions">
          <button type="submit" class="btn btn-primary">Create Admin</button>
          <button type="button" onclick="closeModal('addAdminModal')" class="btn btn-secondary">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <style>
    /* Radio Card Styles */
    .llm-provider-selection {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    @media (max-width: 768px) {
      .llm-provider-selection {
        grid-template-columns: 1fr;
      }
    }

    .radio-card {
      position: relative;
      padding: 1.5rem;
      border: 2px solid #e5e7eb;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.2s ease;
      background: white;
      display: block;
    }

    .radio-card:hover {
      border-color: #4f46e5;
      box-shadow: 0 4px 6px rgba(79, 70, 229, 0.1);
    }

    .radio-card.active {
      border-color: #4f46e5;
      background: #eef2ff;
      box-shadow: 0 4px 6px rgba(79, 70, 229, 0.2);
    }

    .radio-card input[type="radio"] {
      position: absolute;
      opacity: 0;
    }

    .radio-card-content {
      position: relative;
    }

    .radio-card-header {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      margin-bottom: 0.5rem;
    }

    .radio-card-icon {
      font-size: 1.5rem;
    }

    .radio-card h3 {
      margin: 0;
      font-size: 1.125rem;
      font-weight: 600;
      color: #111827;
    }

    .radio-card p {
      margin: 0;
      font-size: 0.875rem;
      color: #6b7280;
      line-height: 1.5;
    }

    .radio-card.active h3 {
      color: #4f46e5;
    }

    .radio-card.active::after {
      content: 'âœ“';
      position: absolute;
      top: 1rem;
      right: 1rem;
      width: 24px;
      height: 24px;
      background: #4f46e5;
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
      font-size: 14px;
    }

    /* Timezone Select Styles */
    .timezone-select {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #d1d5db;
      border-radius: 6px;
      font-size: 1rem;
      background: white;
      cursor: pointer;
      transition: border-color 0.2s;
    }

    .timezone-select:hover {
      border-color: #4f46e5;
    }

    .timezone-select:focus {
      outline: none;
      border-color: #4f46e5;
      box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
    }
  </style>

  <script>
    // Update LLM Provider
    async function updateLLMProvider(provider) {
      const statusMessage = document.getElementById('llmStatusMessage');

      try {
        const response = await fetch('/api/organization/settings/llm-provider', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ llm_provider: provider })
        });

        if (response.ok) {
          // Update UI
          document.querySelectorAll('.radio-card').forEach(card => card.classList.remove('active'));
          document.querySelector(`input[value="${provider}"]`).closest('.radio-card').classList.add('active');

          // Show success message
          statusMessage.style.display = 'block';
          statusMessage.style.background = '#d1fae5';
          statusMessage.style.color = '#065f46';
          statusMessage.style.border = '1px solid #10b981';
          statusMessage.textContent = `âœ… Successfully switched to ${provider === 'openai' ? 'OpenAI GPT-5 Mini' : 'Claude Opus 4.5'}`;

          setTimeout(() => {
            statusMessage.style.display = 'none';
          }, 3000);
        } else {
          throw new Error('Failed to update LLM provider');
        }
      } catch (error) {
        console.error('Error:', error);
        statusMessage.style.display = 'block';
        statusMessage.style.background = '#fee2e2';
        statusMessage.style.color = '#991b1b';
        statusMessage.style.border = '1px solid #ef4444';
        statusMessage.textContent = 'âŒ Error updating LLM provider. Please try again.';

        setTimeout(() => {
          statusMessage.style.display = 'none';
        }, 3000);
      }
    }

    // Update Timezone
    async function updateTimezone(timezone) {
      const statusMessage = document.getElementById('timezoneStatusMessage');

      try {
        const response = await fetch('/api/organization/settings/timezone', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ timezone })
        });

        if (response.ok) {
          // Show success message
          statusMessage.style.display = 'block';
          statusMessage.style.background = '#d1fae5';
          statusMessage.style.color = '#065f46';
          statusMessage.style.border = '1px solid #10b981';
          statusMessage.textContent = `âœ… Timezone updated to ${timezone}`;

          // Update current time display
          updateTimezoneDisplay(timezone);

          setTimeout(() => {
            statusMessage.style.display = 'none';
          }, 3000);
        } else {
          throw new Error('Failed to update timezone');
        }
      } catch (error) {
        console.error('Error:', error);
        statusMessage.style.display = 'block';
        statusMessage.style.background = '#fee2e2';
        statusMessage.style.color = '#991b1b';
        statusMessage.style.border = '1px solid #ef4444';
        statusMessage.textContent = 'âŒ Error updating timezone. Please try again.';

        setTimeout(() => {
          statusMessage.style.display = 'none';
        }, 3000);
      }
    }

    // Update timezone display
    function updateTimezoneDisplay(timezone) {
      const currentTimeElement = document.getElementById('currentTimezoneTime');
      const now = new Date();

      const options = {
        timeZone: timezone,
        hour: 'numeric',
        minute: '2-digit',
        second: '2-digit',
        hour12: true,
        weekday: 'short',
        month: 'short',
        day: 'numeric',
        year: 'numeric'
      };

      const formatter = new Intl.DateTimeFormat('en-US', options);
      currentTimeElement.textContent = formatter.format(now);
    }

    // Initialize timezone display on page load
    document.addEventListener('DOMContentLoaded', function() {
      const timezoneSelect = document.getElementById('timezoneSelect');
      if (timezoneSelect) {
        updateTimezoneDisplay(timezoneSelect.value);

        // Update time every second
        setInterval(() => {
          updateTimezoneDisplay(timezoneSelect.value);
        }, 1000);
      }
    });

    function showAddAdminModal() {
      document.getElementById('addAdminModal').style.display = 'flex';
    }

    function closeModal(modalId) {
      document.getElementById(modalId).style.display = 'none';
    }

    async function addAdmin(e) {
      e.preventDefault();

      const formData = new FormData(e.target);
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        password: formData.get('password')
      };

      try {
        const response = await fetch('/admin/invite-admin', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();

        if (response.ok) {
          alert(`âœ… Admin account created successfully!\n\nEmail: ${result.admin.email}\n\nShare the login credentials with the admin securely.`);
          closeModal('addAdminModal');
          location.reload(); // Refresh to show new admin in list
        } else {
          alert('Error: ' + (result.error || 'Failed to create admin'));
        }
      } catch (error) {
        alert('Error creating admin: ' + error.message);
      }
    }

    async function removeAdmin(adminId) {
      if (!confirm('Are you sure you want to remove this admin? They will no longer have access to the system.')) {
        return;
      }

      try {
        const response = await fetch(`/admin/remove-admin/${adminId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });

        const result = await response.json();

        if (response.ok) {
          alert('Admin removed successfully');
          location.reload();
        } else {
          alert('Error: ' + (result.error || 'Failed to remove admin'));
        }
      } catch (error) {
        alert('Error removing admin: ' + error.message);
      }
    }

    // Close modal when clicking outside
    window.onclick = function(event) {
      if (event.target.classList.contains('modal')) {
        event.target.style.display = 'none';
      }
    }
  </script>
  <script src="/js/global.js"></script>
</body>
</html>
